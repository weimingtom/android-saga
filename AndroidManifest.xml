<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.androidsaga"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/homebtn" 
     android:configChanges="orientation|keyboardHidden"
     android:label="@string/app_name">
    	<receiver android:name=".SagaWidget">
    		<meta-data android:name="android.appwidget.provider"
    			android:resource="@xml/saga_widget" />    			
    		<intent-filter>
    			<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
    		</intent-filter>
    	</receiver>
    	
    	<service android:name="UpdateService"></service>
    	
        <activity android:name=".SagaActivity"
        	android:launchMode="singleInstance" 
        	android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />                
            </intent-filter>
        </activity>
        
        <activity android:name=".SagaPreferenceActivity"
        		  android:label="@string/my_pref">
        	<intent-filter>
        		<action android:name="com.androidsaga.intent.action.SagaPreferences"/>
        		<category android:name="android.intent.category.PREFERENCE" />
        	</intent-filter>
        </activity>   		  

    </application>

<uses-sdk android:minSdkVersion="8" android:targetSdkVersion="8"></uses-sdk>
<supports-screens android:resizeable="true" android:smallScreens="true" android:normalScreens="true" android:largeScreens="true"></supports-screens>


</manifest> 